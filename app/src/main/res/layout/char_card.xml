<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        app:cardBackgroundColor="@color/md_theme_primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="24dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/charImage"
                android:layout_width="84dp"
                android:layout_height="96dp"
                android:src="@drawable/baseline_image_24"/>

            <LinearLayout
                android:paddingHorizontal="24dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/charName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textColor="@color/md_theme_inverseOnSurface"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    />

                <TextView
                    android:id="@+id/charGender"
                    android:layout_marginTop="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Gender"
                    android:textColor="@color/md_theme_inverseOnSurface"
                    android:textSize="16sp"
                    />

                <TextView
                    android:id="@+id/charSpecies"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/cardbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="species"
                    android:textSize="12sp"
                    android:padding="4dp"
                    android:textColor="@color/md_theme_inverseOnSurface"
                    android:textStyle="bold"
                    />


            </LinearLayout>

        </LinearLayout>

        <ProgressBar
            android:layout_gravity="bottom"
            android:id="@+id/progressBar"
            android:indeterminate="true"
            style="?android:attr/progressBarStyleHorizontal"
            android:indeterminateTintMode="src_atop"
            android:indeterminateTint="@color/md_theme_inverseOnSurface"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />



    </androidx.cardview.widget.CardView>
</LinearLayout>